<% @user = User.new if @user.nil? %>
<%= form_for(@user, html: {role: "form"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :email, 'Email', class: 'sr-only' %>
    <%= f.text_field :email, class: 'form-control email',  placeholder: 'Email' %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, class: 'form-control password',  placeholder: 'Password' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirm Password', class: 'sr-only' %>
    <%= f.password_field :password_confirmation, class: "form-control password-confirmation",  placeholder: 'Confirm Password' %>
  </div>

  <%= f.submit 'CREATE MY ACCOUNT', class: 'btn btn-large btn-primary' %>
<% end %>
