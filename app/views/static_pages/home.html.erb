Welcome to Turing!<br /><br />
<% if !current_user.nil? %>
  <% gmail_account = current_user.gmail_accounts.first %>

  <%= link_to("#{gmail_account ? 'Change' : 'Link'} Gmail Account", gmail_oauth2_url(true)) %>
  <% if gmail_account %>
    | <%= link_to("Unlink Gmail Account", gmail_oauth2_remove_url, method: 'delete') %>
  <% end %>

  <br /><br />
  <%= link_to('Signout', signout_path, :method => :delete) %>
<% else %>
  <%= link_to('Signin', signin_path) %><br />
  <%= link_to('Signup', signup_path) %>
<% end %>
