    <div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-content mailbox-content">
                    <div class="file-manager">
                        <button id="compose_button" type="button" class="btn btn-block btn-primary compose-mail" data-toggle="modal" data-target="#composeModal">Compose Email</button>
                        <div class="space-25"></div>
                        <h5>Folders</h5>
                        <ul class="folder-list m-b-md" style="padding: 0">
                            <li><a href="/mail2"> <i class="fa fa-inbox "></i> Inbox <span class="label label-warning pull-right" id="inbox_count_badge"></span> </a></li>
                            <li><a href="mailbox.html"> <i class="fa fa-envelope-o"></i> Sent Mail</a></li>
                            <li><a href="mailbox.html"> <i class="fa fa-certificate"></i> Important</a></li>
                            <li><a href="mailbox.html"> <i class="fa fa-file-text-o"></i> Drafts <span class="label label-danger pull-right">2</span></a></li>
                            <li><a href="mailbox.html"> <i class="fa fa-trash-o"></i> Trash</a></li>
                        </ul>
                        <h5>Categories</h5>

                        <ul class="category-list" style="padding: 0">
                            <div id="email_folders"></div>
                            <div><a href="#attachments_report">Attachments Report</a></div>
                            <div><a href="#email_volume_report">Email Volume Report</a></div>
                            <div><a href="#inbox_efficiency_report">Inbox Efficiency Report</a></div>
                            <div><a href="#summary_analytics_report">Summary Analytics Report</a></div>
                            <div><a href="#threads_report">Threads Report</a></div>
                            <div><a href="#word_count_report">Word Count Report</a></div>
                        </ul>

                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 animated fadeInRight">
        <div class="mail-box-header">

            <form method="get" action="index.html" class="pull-right mail-search">
                <div class="input-group">
                    <input type="text" class="form-control input-sm" name="search" placeholder="Search email">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-sm btn-primary">
                            Search
                        </button>
                    </div>
                </div>
            </form>
            <h2>
                Inbox (16)
            </h2>
            <div class="mail-tools tooltip-demo m-t-md">
                <div class="btn-group pull-right">
                  <button class="btn btn-white btn-sm"><i class="fa fa-arrow-left"></i></button>
                  <button class="btn btn-white btn-sm"><i class="fa fa-arrow-right"></i></button>
                </div>
                <div id="pages" class="row pull-right">
                  <%= will_paginate(@email_threads, :params => params) if @email_threads.count > 0 %>
                </div>
                <a href="/mail2"><button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="left" title="Refresh inbox"><i class="fa fa-refresh"></i> Refresh</button></a>
                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Mark as read"><i class="fa fa-eye"></i> </button>
                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Mark as important"><i class="fa fa-exclamation"></i> </button>
                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </button>

            </div>
        </div>
          <div class="mail-box">
            <div id="reports"></div>
            <table class="table table-hover table-mail">
              <tbody id="email_table_body">
              </tbody>
            </table>
          </div>
        </div>
    </div>
    </div>
