<div class="mail-box-header">
    <div class="pull-right tooltip-demo">
        <a class="btn btn-white btn-sm email_reply_button" data-toggle="tooltip" data-placement="top" title="Reply"><i class="fa fa-reply"></i> Reply</a>
        <a href="#" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Print email"><i class="fa fa-print"></i> </a>
        <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </a>
    </div>
    <h2>
        View Message
    </h2>
    <div class="mail-tools tooltip-demo m-t-md">

        <h3>
            <span class="font-noraml">Subject: </span><span id="email_subject"><%= emails[0].subject.trim() == "" ? "(no subject)" : emails[0].subject %></span>
        </h3>
        <h5>
            <span class="pull-right font-noraml">10:15AM 02 FEB 2014</span>
            <span class="font-noraml">From: </span><%= emails[0].from_name == "" ? emails[0].from_address : emails[0].from_name %>
        </h5>
    </div>
</div>

  <div class="mail-box">
    <div class="mail-body">
      <% _.each(emails.reverse(), function(email, index) { %>
        <div class="email<%= (emails.length > 1 && index < emails.length - 1) && email.seen ? " collapsed_email" : "" %>">
          <div class="email_information">
            <div class="col-md-3">
              <%= email.from_name == "" ? email.from_address : email.from_name %>
            </div>

            <div class="col-md-offset-7 col-md-2">
              <%= email.date == null ? "" : email.date.substring(0, 10) %>
            </div>
          </div>
          
          <br />
          <br />
          <br />
          
          <div class="email_body" <%= emails.length > 1 && index < emails.length - 1 ? "style=\"display: none;\"" : "" %>>
            <div class="row">
              <div class="col-md-11">
                <%
                  if(email.subject.trim() == "Turing Email - Your daily Genie Report!") {
                    %>
                    <iframe id="email_iframe<%= index %>" style="width: 100%;"></iframe><%
                  } else if(email.html_part != null) {%>
                    <iframe id="email_iframe<%= index %>" style="width: 100%;"></iframe>
                  <%
                  } else if(email.text_part != null) {%>
                    <pre><%= email.text_part %></pre>
                  <%
                  } else if(email.body_text != null) {%>
                    <pre><%= email.body_text %></pre>
                  <%
                  }
                %>
              </div>
            </div>
          </div>
        </div>
      <% }); %>

    </div>

    <div class="mail-body text-right tooltip-demo">
            <a class="btn btn-sm btn-white email_reply_button"><i class="fa fa-reply"></i> Reply</a>
            <a class="btn btn-sm btn-white email_forward_button"><i class="fa fa-arrow-right"></i> Forward</a>
            <button title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Print" class="btn btn-sm btn-white"><i class="fa fa-print"></i> Print</button>
            <button title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Remove</button>
    </div>

  <div class="clearfix"></div>
</div>
