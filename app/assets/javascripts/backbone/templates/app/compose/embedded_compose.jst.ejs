<form class="compose_form">
  <div class="modal-body">
      <input id="to_input" type="text" class="form-control" placeholder="To"/><br />
      <input id="cc_input" type="text" class="form-control" placeholder="CC"/><br />
      <input id="bcc_input" type="text" class="form-control" placeholder="BCC"/><br />
      <input id="subject_input" type="text" class="form-control" placeholder="Subject"/><br />
      <label class="compose_form_attachments_label">Attachments</label><input class="compose_form_attachments_input" type="file" name="attachment" multiple />
      <br />
      <br />
      <div contenteditable="true" class="form-control summernote email-draft-editable compose_email_body" rows="15">
        <%= email.html_part %>
      </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button id="save_button" type="button" class="btn btn-info">Save</button>
    <button type="submit" class="btn btn-primary">Send</button>
  </div>
</form>